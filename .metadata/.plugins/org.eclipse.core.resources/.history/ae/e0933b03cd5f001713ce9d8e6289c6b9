package signup;
import java.sql.*;

public class usercheck {
	static void main (String [] args)
	{
		usercheck.connect("sha","sami","shahbaz","paytm","male","shaharyar");
	}
    int connect(String name,String username,String password,String merchant,String gender,String emailid)
   {
	   int k=0;
	   Connection conn=null;
       String id="SHAHARYARSHAMSHI";
       String passcode="shahbazshamshi";
       String url="jdbc:mysql://localhost/cookbook?useSSL=false";
       try
       {
          Class.forName("com.mysql.jdbc.Driver").newInstance();
          conn=DriverManager.getConnection(url, id, passcode);
          System.out.println("connected");
       }
       catch (Exception e)
       {
           System.out.println(e);
       }
       try
       {
    	   Statement s=conn.createStatement();
    	   s.execute("Select username from user");
    	   ResultSet rs=s.getResultSet();
    	   while(rs.next())
    	   {
    		   if(username==rs.getString(1));
    		   {
    			  k++;
    			   break;
    		   }
    	   }
    	   
       }
       catch(Exception e)
       {
    	   System.out.println(e);
       }
       if(k==0)
       {
    	   
    	   try {
    		   PreparedStatement p;
			p=conn.prepareStatement("insert into user(name,username,password,merchant,gender,emailid,mobile,balance)"+ "values(?,?,?,?,?,?,?,?)");
			p.setString(1, name);
			p.setString(2, username);
			p.setString(3,password);
			p.setString(4, merchant);
			p.setString(5, gender);
			p.setString(6,emailid);
			p.setInt(7, 988);
			p.setInt(8,0);
			p.execute();
		} 
    	   catch (SQLException e)
    	   {
			System.out.println("error");
		}
       }
       if(conn!=null)
       {
    	   try
    	   {
    		   conn.close();
    	   }
    	   catch(Exception e)
    	   {
    		   System.out.println();
    	   }
       }
       return k;
   }
}
